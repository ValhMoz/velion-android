<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Información del bono o cita -->
    <TextView
        android:id="@+id/purchaseInfoTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Información del Bono/Cita"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <!-- Detalles del bono o cita -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start"
        android:layout_marginBottom="8dp">

        <!-- Icono de precio -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"/>

        <!-- Precio del bono o cita -->
        <TextView
            android:id="@+id/purchasePriceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precio"
            android:textSize="16sp"/>

    </LinearLayout>

    <!-- Botón para comprar el bono o cita -->
    <Button
        android:id="@+id/buyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comprar"
        android:textColor="@android:color/white"/>

</LinearLayout>
